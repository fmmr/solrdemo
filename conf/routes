# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(message: String ?= null)
GET     /search                     controllers.LocalSolr.search()
GET     /facets                     controllers.LocalSolr.facets(num: Integer ?= 10)
GET     /add                        controllers.LocalSolr.add()
GET     /addmany                    controllers.LocalSolr.addMany(num: Integer ?= 100)
GET     /removeall                  controllers.LocalSolr.removeAll()

GET     /searchremote               controllers.RemoteSolr.index()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
